    <pages validateRequest="false" controlRenderingCompatibilityVersion="4.0"/>
  </system.web>
  <system.webServer>
    <handlers>
      <add name="Code" type="SP.Studio.Drawing.ValidateCodeHandler" path="ValidateCode.*" verb="GET"/>
      <add name="PaymentHandler" type="BW.Handler.PaymentHandler" path="/handler/payment/*" verb="*"/>
      <add name="ServiceHandler" type="BW.Handler.ServiceHandler" path="/service" verb="*"/>
      <add name="HandlerResult" type="BW.Handler.ResultInterface" path="*" verb="*"/>
    </handlers>
    <modules>
      <add name="BetModule" type="BW.Framework.BetModule"/>
    </modules>
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By"/>
        <add name="Access-Control-Allow-Origin" value="*"/>
        <add name="Access-Control-Allow-Headers" value="Origin, X-Requested-With, x-request, Content-Type, Accept"/>
        <add name="Access-Control-Allow-Credentials" value="true"/>
        <add name="X-UA-Compatible" value="chrome=1"/>
