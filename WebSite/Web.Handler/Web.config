    <add name="SNAPConnection" connectionString="server=test.bw3.com;uid=uBetWin;pwd=fjaumX8DZQ2JryNr;database=BetWin 2.0_Log;"/>
  </connectionStrings>
  <appSettings>
    <add key="platform" value="WEB"/>
    <!-- 图片服务器路径 -->
